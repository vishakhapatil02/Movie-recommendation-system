        <!-- User Profile Tab -->
<div class="tab-pane fade" id="user-profile" role="tabpanel">
  <div class="card mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">üë§ User Profile</h6>
    </div>
    <div class="card-body">
      <form>
        <!-- Profile Picture Upload -->
        <div class="mb-3 text-center">
          <img src="https://via.placeholder.com/120" class="rounded-circle mb-2" alt="Profile Picture" width="120" height="120" id="avatarPreview">
          <div class="mt-2">
            <input type="file" class="form-control form-control-sm d-inline-block w-auto" id="avatarUpload" accept="image/*">
          </div>
        </div>

        <!-- Name -->
        <div class="mb-3">
          <label for="userName" class="form-label">Name</label>
          <input type="text" class="form-control" id="userName" value="John Doe">
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="userEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="userEmail" value="johndoe@example.com">
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
          <label for="userPhone" class="form-label">Phone Number (optional)</label>
          <input type="tel" class="form-control" id="userPhone" placeholder="e.g. +91 9876543210">
        </div>

        <!-- Password Change -->
        <div class="mb-3">
          <label for="newPassword" class="form-label">New Password</label>
          <input type="password" class="form-control" id="newPassword" placeholder="Enter new password">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label">Confirm New Password</label>
          <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Update Profile</button>
      </form>
    </div>
  </div>
</div>


            <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Sidebar toggle functionality
            $('#sidebarToggle').click(function() {
                $('#sidebar').toggleClass('collapsed');
                $('#main-content').toggleClass('expanded');
            });

            // Tab navigation
            $('[data-tab]').click(function(e) {
                e.preventDefault();
                const tabId = $(this).data('tab');
                $('.tab-pane').removeClass('show active');
                $('#' + tabId).addClass('show active');
                
                // Update active state in sidebar
                $('.sidebar-link').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>
</body>
