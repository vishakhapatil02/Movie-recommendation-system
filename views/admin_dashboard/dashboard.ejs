    <script>
        $(document).ready(function() {
            // Sidebar toggle functionality
            $('#sidebarToggle').click(function() {
                $('#sidebar').toggleClass('collapsed');
                $('#main-content').toggleClass('expanded');
            });

            // Tab navigation
            $('[data-tab]').click(function(e) {
                e.preventDefault();
                const tabId = $(this).data('tab');
                $('.tab-pane').removeClass('show active');
                $('#' + tabId).addClass('show active');
                
                // Update active state in sidebar
                $('.sidebar-link').removeClass('active');
                $(this).addClass('active');
                
                // Show loading spinner
                showLoading();
                
                // Simulate loading data
                setTimeout(function() {
                    hideLoading();
                }, 1000);
            });

            // Show poster preview
            $('#poster').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#posterPreview').attr('src', e.target.result).show();
                    }
                    reader.readAsDataURL(file);
                }
            });

            // Form validation
            $('#addMovieForm').submit(function(e) {
                e.preventDefault();
                
                // Validate form
                let isValid = true;
                $(this).find('[required]').each(function() {
                    if (!$(this).val()) {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (isValid) {
                    showLoading();
                    
                    // Simulate API call
                    setTimeout(function() {
                        hideLoading();
                        showSuccessToast('Movie added successfully!');
                        $('#addMovieForm')[0].reset();
                        $('#posterPreview').hide();
                    }, 1500);
                }
            });

            // Delete button click handler
            $('.btn-danger').click(function() {
                const itemId = $(this).closest('tr').find('td:first').text();
                $('#deleteModal').modal('show');
                
                $('#confirmDelete').off('click').click(function() {
                    showLoading();
                    
                    // Simulate API call
                    setTimeout(function() {
                        hideLoading();
                        $('#deleteModal').modal('hide');
                        showSuccessToast('Item deleted successfully!');
                    }, 1000);
                });
            });

            // Helper functions
            function showLoading() {
                $('#loadingSpinner').show();
            }

            function hideLoading() {
                $('#loadingSpinner').hide();
            }

            function showSuccessToast(message) {
                $('#successToast .toast-body').text(message);
                const toast = new bootstrap.Toast($('#successToast'));
                toast.show();
            }

            function showErrorToast(message) {
                $('#errorToast .toast-body').text(message);
                const toast = new bootstrap.Toast($('#errorToast'));
                toast.show();
            }
        });
    </script>
