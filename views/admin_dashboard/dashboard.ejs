<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Movies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            display: flex;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
        }
        .sidebar {
            min-width: 250px;
            background-color: #343a40;
            height: 100vh;
            color: white;
            padding: 20px 0;
        }
        .sidebar-header {
            padding: 0 20px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 12px 20px;
            margin: 2px 0;
            border-radius: 0;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover {
            color: white;
            background-color: rgba(255,255,255,0.1);
        }
        .sidebar .nav-link.active {
            color: white;
            background-color: rgba(255,255,255,0.2);
        }
        .sidebar .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        .main-body {
            flex-grow: 1;
            padding: 20px;
            background-color: white;
            overflow-y: auto;
            height: 100vh;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            border: none;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            font-weight: 600;
            padding: 15px 20px;
        }
        .nav-tabs {
            border-bottom: 1px solid #dee2e6;
        }
        .nav-tabs .nav-link {
            border: none;
            color: #495057;
            font-weight: 500;
            padding: 12px 20px;
        }
        .nav-tabs .nav-link.active {
            color: #007bff;
            background-color: transparent;
            border-bottom: 2px solid #007bff;
        }
        .form-control {
            border-radius: 5px;
            padding: 10px 15px;
        }
        .btn {
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: 500;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-sm {
            padding: 5px 10px;
            font-size: 12px;
        }
        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
        }
        .movie-poster {
            width: 100px;
            height: auto;
            border-radius: 5px;
        }
        .action-buttons .btn {
            margin-right: 5px;
        }
        .preview-image {
            max-width: 200px;
            max-height: 200px;
            margin-top: 10px;
            display: none;
        }
        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }
        .loading i {
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="sidebar-header">
            <h4 class="text-white"><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h4>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#" onclick="showTab('movies')"><i class="fas fa-film"></i> Movies</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showTab('users')"><i class="fas fa-users"></i> Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showTab('ratings')"><i class="fas fa-star"></i> Ratings & Reviews</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="showTab('profile')"><i class="fas fa-user-cog"></i> Admin Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </li>
        </ul>
    </div>

    <div class="main-body">
        <!-- Movies Tab Content -->
        <div id="movies" class="tab-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3><i class="fas fa-film"></i> Movie Management</h3>
                <button class="btn btn-primary" onclick="showMovieTab('add')">
                    <i class="fas fa-plus"></i> Add New Movie
                </button>
            </div>
            
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#" onclick="showMovieTab('add')">Add Movie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="showMovieTab('view')">View Movies</a>
                </li>
            </ul>
            
            <!-- Add Movie Tab -->
            <div id="add-movie" class="tab-pane mt-3">
                <div class="card">
                    <div class="card-header">
                        Add New Movie
                    </div>
                    <div class="card-body">
                        <form id="addMovieForm">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="title">Title *</label>
                                        <input type="text" class="form-control" id="title" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Description *</label>
                                        <textarea class="form-control" id="description" rows="3" required></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="release_date">Release Date *</label>
                                        <input type="date" class="form-control" id="release_date" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="genre">Genre *</label>
                                        <select class="form-control" id="genre" required>
                                            <option value="">Select Genre</option>
                                            <option value="Action">Action</option>
                                            <option value="Adventure">Adventure</option>
                                            <option value="Comedy">Comedy</option>
                                            <option value="Drama">Drama</option>
                                            <option value="Horror">Horror</option>
                                            <option value="Sci-Fi">Sci-Fi</option>
                                            <option value="Thriller">Thriller</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="director">Director *</label>
                                        <input type="text" class="form-control" id="director" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="language">Language *</label>
                                        <input type="text" class="form-control" id="language" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="country">Country *</label>
                                        <input type="text" class="form-control" id="country" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="budget">Budget ($) *</label>
                                        <input type="number" class="form-control" id="budget" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="revenue">Revenue ($) *</label>
                                        <input type="number" class="form-control" id="revenue" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="runtime">Runtime (minutes) *</label>
                                        <input type="number" class="form-control" id="runtime" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="poster">Movie Poster *</label>
                                        <input type="file" class="form-control-file" id="poster" accept="image/*" required>
                                        <img id="poster-preview" class="preview-image" src="#" alt="Poster preview">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="trailer_url">Trailer URL *</label>
                                        <input type="url" class="form-control" id="trailer_url" placeholder="https://www.youtube.com/watch?v=..." required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Save Movie
                                </button>
                                <button type="reset" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- View Movies Tab -->
            <div id="view-movies" class="tab-pane mt-3" style="display: none;">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>All Movies</span>
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" placeholder="Search movies...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="loading" id="movies-loading">
                            <i class="fas fa-spinner fa-3x fa-spin"></i>
                            <p>Loading movies...</p>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Poster</th>
                                        <th>Title</th>
                                        <th>Genre</th>
                                        <th>Release Date</th>
                                        <th>Director</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="movieTableBody">
                                    <!-- Sample data - in a real app this would come from an API -->
                                    <tr>
                                        <td><img src="https://via.placeholder.com/100x150" class="movie-poster" alt="Movie Poster"></td>
                                        <td>The Shawshank Redemption</td>
                                        <td>Drama</td>
                                        <td>1994-09-23</td>
                                        <td>Frank Darabont</td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary" onclick="editMovie(1)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="confirmDelete(1)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><img src="https://via.placeholder.com/100x150" class="movie-poster" alt="Movie Poster"></td>
                                        <td>The Godfather</td>
                                        <td>Crime</td>
                                        <td>1972-03-24</td>
                                        <td>Francis Ford Coppola</td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary" onclick="editMovie(2)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="confirmDelete(2)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><img src="https://via.placeholder.com/100x150" class="movie-poster" alt="Movie Poster"></td>
                                        <td>The Dark Knight</td>
                                        <td>Action</td>
                                        <td>2008-07-18</td>
                                        <td>Christopher Nolan</td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary" onclick="editMovie(3)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="confirmDelete(3)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="Movie pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Other tabs (hidden by default) -->
        <div id="users" class="tab-content" style="display: none;">
            <h3>Users</h3>
            <!-- User management content would go here -->
        </div>

        <div id="ratings" class="tab-content" style="display: none;">
            <h3>Rating and Reviews</h3>
            <!-- Ratings and reviews content would go here -->
        </div>

        <div id="profile" class="tab-content" style="display: none;">
            <h3>Admin Profile</h3>
            <!-- Admin profile content would go here -->
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this movie? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Toast -->
    <div class="toast" id="successToast" style="position: fixed; top: 20px; right: 20px; min-width: 300px;" data-delay="3000">
        <div class="toast-header bg-success text-white">
            <strong class="mr-auto">Success</strong>
            <button type="button" class="ml-2 mb-1 close text-white" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Operation completed successfully!
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Global variable to store the movie ID to delete
        let movieToDelete = null;
        
        // Show tab content
        function showTab(tab) {
            $('.tab-content').hide();
            $('#' + tab).show();
            // Update active state in sidebar
            $('.sidebar .nav-link').removeClass('active');
            $(`.sidebar .nav-link[onclick="showTab('${tab}')"]`).addClass('active');
        }
        
        // Show movie tab content
        function showMovieTab(tab) {
            $('#add-movie, #view-movies').hide();
            $('#' + tab + '-movie').show();
            // Update active state in movie tabs
            $('.nav-tabs .nav-link').removeClass('active');
            $(`.nav-tabs .nav-link[onclick="showMovieTab('${tab}')"]`).addClass('active');
            
            // If showing view movies, simulate loading data
            if (tab === 'view') {
                $('#movies-loading').show();
                $('#movieTableBody').hide();
                
                // Simulate API call delay
                setTimeout(function() {
                    $('#movies-loading').hide();
                    $('#movieTableBody').show();
                }, 1000);
            }
        }
        
        // Preview image when selected
        $('#poster').change(function() {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#poster-preview').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
        
        // Handle form submission
        $('#addMovieForm').on('submit', function(e) {
            e.preventDefault();
            
            // Show loading state
            $('button[type="submit"]').html('<i class="fas fa-spinner fa-spin"></i> Saving...').prop('disabled', true);
            
            // Simulate API call delay
            setTimeout(function() {
                // Show success toast
                $('#successToast .toast-body').text('Movie added successfully!');
                $('#successToast').toast('show');
                
                // Reset form
                $('#addMovieForm')[0].reset();
                $('#poster-preview').hide();
                
                // Reset button
                $('button[type="submit"]').html('<i class="fas fa-save"></i> Save Movie').prop('disabled', false);
                
                // Optionally switch to view tab
                // showMovieTab('view');
            }, 1500);
        });
        
        // Confirm delete action
        function confirmDelete(movieId) {
            movieToDelete = movieId;
            $('#deleteModal').modal('show');
        }
        
        // Handle delete confirmation
        $('#confirmDeleteBtn').click(function() {
            $('#deleteModal').modal('hide');
            
            // Show loading state
            $('#movies-loading').show();
            $('#movieTableBody').hide();
            
            // Simulate API call delay
            setTimeout(function() {
                // Show success toast
                $('#successToast .toast-body').text('Movie deleted successfully!');
                $('#successToast').toast('show');
                
                // In a real app, you would remove the item from the table
                // For now, we'll just reload the table
                $('#movies-loading').hide();
                $('#movieTableBody').show();
            }, 1000);
        });
        
        // Edit movie function
        function editMovie(movieId) {
            // In a real app, this would fetch movie data and populate the form
            alert('Edit movie with ID: ' + movieId);
            // You would typically:
            // 1. Fetch movie data by ID
            // 2. Populate the add movie form
            // 3. Change the form to update mode
            // 4. Switch to the add movie tab
        }
        
        // Logout function
        function logout() {
            // Implement logout functionality
            if (confirm('Are you sure you want to logout?')) {
                // In a real app, this would redirect to logout endpoint
                alert('Logged out successfully');
            }
        }
        
        // Initialize the page
        $(document).ready(function() {
            // Show movies tab by default
            showTab('movies');
            showMovieTab('add');
            
            // Initialize toasts
            $('.toast').toast();
        });
    </script>
</body>
</html>
