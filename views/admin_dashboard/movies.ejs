 <!DOCTYPE html>
 <html lang="en">
 <head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
 </head>
 <body>
  <div class="main-body">
        <!-- Movies Tab Content -->
        <div id="movies" class="tab-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3><i class="fas fa-film"></i> Movie Management</h3>
                <button class="btn btn-primary" onclick="showMovieTab('add')">
                    <i class="fas fa-plus"></i> Add New Movie
                </button>
            </div>
            
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#" onclick="showMovieTab('add')">Add Movie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" onclick="showMovieTab('view')">View Movies</a>
                </li>
            </ul>
            
        <!-- Add Movie Tab -->
            <div id="add-movie" class="tab-pane mt-3">
                <div class="card">
                    <div class="card-header">
                        Add New Movie
                    </div>
                    <div class="card-body">
                        <form id="addMovieForm">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="title">Title *</label>
                                        <input type="text" class="form-control" id="title" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Description *</label>
                                        <textarea class="form-control" id="description" rows="3" required></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="release_date">Release Date *</label>
                                        <input type="date" class="form-control" id="release_date" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="genre">Genre *</label>
                                        <select class="form-control" id="genre" required>
                                            <option value="">Select Genre</option>
                                            <option value="Action">Action</option>
                                            <option value="Adventure">Adventure</option>
                                            <option value="Comedy">Comedy</option>
                                            <option value="Drama">Drama</option>
                                            <option value="Horror">Horror</option>
                                            <option value="Sci-Fi">Sci-Fi</option>
                                            <option value="Thriller">Thriller</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="director">Director *</label>
                                        <input type="text" class="form-control" id="director" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="language">Language *</label>
                                        <input type="text" class="form-control" id="language" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="country">Country *</label>
                                        <input type="text" class="form-control" id="country" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="budget">Budget ($) *</label>
                                        <input type="number" class="form-control" id="budget" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="revenue">Revenue ($) *</label>
                                        <input type="number" class="form-control" id="revenue" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="runtime">Runtime (minutes) *</label>
                                        <input type="number" class="form-control" id="runtime" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="poster">Movie Poster *</label>
                                        <input type="file" class="form-control-file" id="poster" accept="image/*" required>
                                        <img id="poster-preview" class="preview-image" src="#" alt="Poster preview">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="trailer_url">Trailer URL *</label>
                                        <input type="url" class="form-control" id="trailer_url" placeholder="https://www.youtube.com/watch?v=..." required>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Save Movie
                                </button>
                                <button type="reset" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

             <!-- View Movies Tab -->
            <div id="view-movies" class="tab-pane mt-3" style="display: none;">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>All Movies</span>
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" placeholder="Search movies...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="loading" id="movies-loading">
                            <i class="fas fa-spinner fa-3x fa-spin"></i>
                            <p>Loading movies...</p>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Poster</th>
                                        <th>Title</th>
                                        <th>Genre</th>
                                        <th>Release Date</th>
                                        <th>Director</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="movieTableBody">
                                    <!-- Sample data - in a real app this would come from an API -->
                                    <tr>
                                        <td><img src="https://via.placeholder.com/100x150" class="movie-poster" alt="Movie Poster"></td>
                                        <td>The Shawshank Redemption</td>
                                        <td>Drama</td>
                                        <td>1994-09-23</td>
                                        <td>Frank Darabont</td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary" onclick="editMovie(1)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="confirmDelete(1)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><img src="https://via.placeholder.com/100x150" class="movie-poster" alt="Movie Poster"></td>
                                        <td>The Godfather</td>
                                        <td>Crime</td>
                                        <td>1972-03-24</td>
                                        <td>Francis Ford Coppola</td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary" onclick="editMovie(2)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="confirmDelete(2)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><img src="https://via.placeholder.com/100x150" class="movie-poster" alt="Movie Poster"></td>
                                        <td>The Dark Knight</td>
                                        <td>Action</td>
                                        <td>2008-07-18</td>
                                        <td>Christopher Nolan</td>
                                        <td class="action-buttons">
                                            <button class="btn btn-sm btn-primary" onclick="editMovie(3)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="confirmDelete(3)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="Movie pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Other tabs (hidden by default) -->
        <div id="users" class="tab-content" style="display: none;">
            <h3>Users</h3>
            <!-- User management content would go here -->
        </div>

        <div id="ratings" class="tab-content" style="display: none;">
            <h3>Rating and Reviews</h3>
            <!-- Ratings and reviews content would go here -->
        </div>

        <div id="profile" class="tab-content" style="display: none;">
            <h3>Admin Profile</h3>
            <!-- Admin profile content would go here -->
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this movie? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>
            
 </body>
 </html>
            