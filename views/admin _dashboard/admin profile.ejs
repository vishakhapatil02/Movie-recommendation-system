<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard - MovieMatch</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      background: #f5f8fa;
      color: #333;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      background: #2c2f48;
      padding: 20px;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }

    .sidebar h2 {
      color: #4ef037;
    }

    .sidebar a {
      color: #fff;
      text-decoration: none;
      padding: 10px;
      display: block;
      margin-bottom: 10px;
      border-radius: 4px;
    }

    .sidebar a:hover {
      background: #4ef037;
      color: #000;
    }

    .main-content {
      margin-left: 250px;
      padding: 20px;
    }

    .tab-content {
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <div class="sidebar">
    <h2>Admin Dashboard</h2>
    <a href="#" onclick="loadTab('movies')">Movies</a>
    <a href="#" onclick="loadTab('users')">Users</a>
    <a href="#" onclick="loadTab('ratings')">Ratings and Reviews</a>
    <a href="#" onclick="loadTab('profile')">Admin Profile</a>
    <a href="/logout">Logout</a>
  </div>

  <div class="main-content">
    <h1>Welcome to the Admin Dashboard</h1>
    <div id="tabContent" class="tab-content">
      <!-- Dynamic content will be loaded here -->
      <p>Select a menu item from the sidebar to get started.</p>
    </div>
  </div>

  <script>
    function loadTab(tab) {
      let content = '';
      switch(tab) {
        case 'movies':
          content = `
            <h2>Movies</h2>
            <ul class="nav nav-tabs" id="movieTabs">
              <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#addMovie">Add Movie</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#viewMovies">View Movies</a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane fade show active" id="addMovie">
                <h3>Add Movie</h3>
                <form id="addMovieForm">
                  <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" required>
                  </div>
                  <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" required></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="release_date" class="form-label">Release Date</label>
                    <input type="date" class="form-control" id="release_date" required>
                  </div>
                  <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <select class="form-select" id="genre" required>
                      <option value="">Select Genre</option>
                      <option value="Action">Action</option>
                      <option value="Comedy">Comedy</option>
                      <option value="Drama">Drama</option>
                      <option value="Horror">Horror</option>
                      <option value="Sci-Fi">Sci-Fi</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="director" class="form-label">Director</label>
                    <input type="text" class="form-control" id="director" required>
                  </div>
                  <div class="mb-3">
                    <label for="language" class="form-label">Language</label>
                    <input type="text" class="form-control" id="language" required>
                  </div>
                  <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" id="country" required>
                  </div>
                  <div class="mb-3">
                    <label for="budget" class="form-label">Budget</label>
                    <input type="number" class="form-control" id="budget" required>
                  </div>
                  <div class="mb-3">
                    <label for="revenue" class="form-label">Revenue</label>
                    <input type="number" class="form-control" id="revenue" required>
                  </div>
                  <div class="mb-3">
                    <label for="runtime" class="form-label">Runtime (minutes)</label>
                    <input type="number" class="form-control" id="runtime" required>
                  </div>
                  <div class="mb-3">
                    <label for="poster" class="form-label">Poster</label>
                    <input type="file" class="form-control" id="poster" required>
                  </div>
                  <div class="mb-3">
                    <label for="trailer_url" class="form-label">Trailer URL</label>
                    <input type="url" class="form-control" id="trailer_url" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Add Movie</button>
                </form>
              </div>
              <div class="tab-pane fade" id="viewMovies">
                <h3>View Movies</h3>
                <table class="table table-dark">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Genre</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="movieTable">
                    <!-- Movie data will be populated here -->
                  </tbody>
                </table>
              </div>
            </div>
          `;
          break;
        case 'users':
          content = `
            <h2>Users</h2>
            <h3>View Users</h3>
            <table class="table table-dark">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Email</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="userTable">
                <!-- User data will be populated here -->
              </tbody>
            </table>
          `;
          break;
        case 'ratings':
          content = `
            <h2>Ratings and Reviews</h2>
            <h3>Movie Ratings</h3>
            <table class="table table-dark">
              <thead>
                <tr>
                  <th>Movie Title</th>
                  <th>User</th>
                  <th>Rating</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="ratingTable">
                <!-- Rating data will be populated here -->
              </tbody>
            </table>
          `;
          break;
        case 'profile':
          content = `
            <h2>Admin Profile</h2>
            <p>Profile details go here.</p>
          `;
          break;
      }
      document.getElementById('tabContent').innerHTML = content;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
